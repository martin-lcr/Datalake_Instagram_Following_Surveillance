# EditorConfig - DÃ©finit le style de code pour le projet
# https://editorconfig.org

root = true

# Tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefile (IMPORTANT : utilise des tabs, pas des espaces)
[Makefile]
indent_style = tab
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2
